#!/bin/bash

# http://en.wikipedia.org/wiki/List_of_ISO_639-1_codes
lang_in="auto"
while [ "${1:-}" == "-" ]; do
    [ "$1" == "-l" ] && lang_in="$2"
    [ "$1" == "-o" ] && lang_out="$2"
    shift; shift
done

words=$@
wget -U "Mozilla/5.0" -qO - "http://translate.google.com/translate_a/t?client=t&sl=$lang_in&tl=$lang_out&text=$words" | sed 's/\[\[\[\"//' | cut -d \" -f 1
